pipeline

{

   agent any

   stages

   { 
       stage('scm checkout')

       {

           steps {

               git branch: 'master', url: 'https://github.com/prakashk0301/maven-project'

                 }

       }



       stage('please compile code')

       { steps {
       

           withMaven(jdk: 'localjdk', maven: 'localMaven') {

            sh 'mvn compile'

}

       }



       }

      

           stage('please test code')

       { steps {

           withMaven(jdk: 'localjdk', maven: 'localMaven') {

            sh 'mvn test'

}

       }



       }

        stage('please build code')

       { steps {

           withMaven(jdk: 'localjdk', maven: 'localMaven') {

            sh 'mvn package'

}

       }



       }

   } 

}
